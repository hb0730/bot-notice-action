{
  "name": "bot-notice-action",
  "version": "1.0.0",
  "description": "Bot Notice Action",
  "repository": {
    "type": "git",
    "url": "https://github.com/hb0730/bot-notice-action"
  },
  "homepage": "https://github.com/hb0730/bot-notice-action",
  "author": "hb0730 <1278032416@qq.com>",
  "license": "MIT",
  "keywords": [
    "bot",
    "notice",
    "action",
    "feishu",
    "dingtalk",
    "wechat"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.{ts,yml,json,md}",
    "format-check": "prettier --check **/*.{ts,yml,json,md}",
    "lint": "eslint . -c ./.github/linters/.eslintrc.yml",
    "pack": "ncc build src/index.ts --license licenses.txt",
    "test": "jest",
    "all": "npm run format && npm test && npm run pack "
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/http-client": "^2.2.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.53.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
